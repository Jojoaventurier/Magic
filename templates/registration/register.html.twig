{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger text-white bg-red-500 rounded-lg p-4 my-4" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="flex flex-col justify-center items-center h-screen">
        <div class="w-full max-w-md p-8 mx-auto bg-white text-white bg-opacity-10 rounded-3xl shadow-lg sm:-mx-10 sm:p-10">
            <h1 class="text-2xl font-semibold text-center text-white averia-serif-libre-regular mb-8">Inscription à Magic-Hub</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

                <div class="relative border-b border-gray-300 pb-2">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'w-full bg-transparent focus:outline-none placeholder-gray-400 dark:placeholder-gray-300'}}) }}
                </div>

                <div class="relative border-b border-gray-300 pb-2">
                    {{ form_row(registrationForm.userName, {'attr': {'class': 'w-full bg-transparent placeholder-gray-400'}}) }}
                </div>

                <div class="relative border-b border-gray-300 pb-2">
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'w-full bg-transparent placeholder-gray-400 px-4 py-2 border rounded-lg focus:outline focus:outline-red-800'}}) }}
                </div>

                <div class="flex items-center space-x-2">
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-checkbox text-red-500 focus:ring-red-500'}}) }}
                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="text-sm text-white">J'accepte les conditions d'utilisation</label>
                </div>

                <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-3 rounded-full transition">
                    Valider l'inscription
                </button>

            {{ form_end(registrationForm) }}
        </div>
        <div class="pt-12 text-gray-500 dark:border-gray-800">
            <div class="space-x-4 text-center averia-serif-libre-regular">
              <span>&copy; Magic-Hub</span>
              <a href="#" class="text-sm hover:text-sky-900 dark:hover:text-gray-300">Contact</a>
              <a href="#" class="text-sm hover:text-sky-900 dark:hover:text-gray-300">Termes et confidentialité</a>
            </div>
          </div>
    </div>
{% endblock %}
